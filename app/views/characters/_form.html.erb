<%= render partial: "users/errors", locals: {user: @character} %>

<%= form_for @character do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :alias %>
  <%= f.text_field :alias %><br>

    <h3>Superpowers:</h3>
    <ol>
    <%= f.fields_for :superpowers do |superpower| %>
      <% if @character.superpowers.size == 0 %>
      <%= superpower.label :name %>
      <%= superpower.text_field :name %>
      <% else %>
      <li>
        <%= superpower.label :name %>
        <%= superpower.text_field :name %>
      </li>
    <% end %>
    </ol>
    <% end %>
  <br>
  <%= f.submit %>
 <% end %>
